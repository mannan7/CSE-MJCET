<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".youtube">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="C PROGRAMMING"
            android:id="@+id/Clang"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="C++ PROGRAMMING"
            android:id="@+id/Cplus"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="DATA STRUCTURES"
            android:id="@+id/DS"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="JAVA"
            android:id="@+id/JAVA"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="LOGIC AND SWITCHING THEORY"
            android:id="@+id/LST"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="DISCRETE MATHEMATICS"
            android:id="@+id/DM"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="AUTOMATA LANGUAGES AND COMPUTATION"
            android:id="@+id/ALC"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="OPERSTING SYSTEMS"
            android:id="@+id/OS"
            android:textSize="25dp"
            android:onClick="onClick"
            android:paddingBottom="3dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="COMPUTER NETWORKS"
        android:id="@+id/CN"
        android:textSize="25dp"
        android:onClick="onClick"
        android:paddingBottom="3dp"
        />
    </LinearLayout>

</ScrollView>